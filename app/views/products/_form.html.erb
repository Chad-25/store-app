<%=  form_with model: @product do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-input" %>

  <%= form.label :description %>
  <%= form.text_area :description, class: "form-input" %>

  <%= form.label :price %>
  <%= form.number_field :price, step: '0.01', class: "form-input" %>

  <%= form.label :quantity %>
  <%= form.number_field :quantity, class: "form-input" %>

  <%= form.label :photo %>
  <%= form.file_field :photo, class: "form-input" %>

  <%= form.submit class: "form-submit" %>
<% end %>
