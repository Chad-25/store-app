<h1> Add New Product </h1>

<%=  form_with model: @product do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>


  <%= form.label :price %>
  <%= form.number_field :price, step: '0.01' %>

  <%= form.label :quantity %>
  <%= form.number_field :quantity %>

  <%= form.submit "Create Product" %>
<% end %>

<%= link_to "Back to Main", products_path %>
